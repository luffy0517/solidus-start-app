<%= form_for order, url: update_checkout_path(order.state) do |form| %>
  <%= form.label :coupon_code %>
  <%= form.text_field :coupon_code, placeholder: true %>

  <button type="submit" id="coupon-code-apply-button">
    <%= t('spree.apply_code') %>
  </button>
<% end %>

<p id='coupon_status'></p>
