<%
  base_class = "text-input".freeze

  # Optional props
  id = false if local_assigns[:id].nil?
  disabled = false if local_assigns[:disabled].nil?
  label = false if local_assigns[:label].nil?
  min = false if local_assigns[:min].nil?
  placeholder = "" if local_assigns[:placeholder].nil?
  type = :text if local_assigns[:type].nil?
  value = "" if local_assigns[:value].nil?

  # Classes
  class_names = [base_class]
  class_names = class_names.join(" ")
%>

<div class="<%= class_names %>">
  <% if label %>
    <label
      class="<%= class_names %>"
      <% if id %>
        for="<%= id %>"
      <% end %>
    >
      <%= label %>:
    </label>
  <% end %>

  <input
    name="<%= name %>"
    placeholder="<%= placeholder %>"
    type="<%= type %>"
    value="<%= value %>"
    <% if id %>
      id="<%= id %>"
    <% end %>
    <% if min %>
      min="<%= min %>"
    <% end %>
    <%= disabled ? "disabled" : "" %>
  >
</div>
