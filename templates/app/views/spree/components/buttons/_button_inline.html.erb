<%
  base_class = "button-inline".freeze

  # Optional props
  disabled = local_assigns.fetch(:disabled, false)
  id = local_assigns.fetch(:id, false)
  name = local_assigns.fetch(:name, nil)
  type = local_assigns.fetch(:type, 'button')
  classes = local_assigns.fetch(:classes, [])

  # Classes
  class_names = classes.push(base_class).join(" ")
%>

<%= button_tag(
  class: class_names,
  disabled: disabled,
  id: id,
  name: name,
  type: type
) do %>
  <%= content %>
<% end %>
