<div class="top-bar">
  <%= render 'spree/shared/brand/logo' %>
  <div class="top-bar__search">
    <%= render 'spree/shared/search/search_bar', taxons: taxons, taxon: taxon %>
  </div>

  <% if spree_current_user %>
    <%= link_to I18n.t('spree.my_account'), spree.account_path, class: 'auth-link' %>
  <% else %>
    <%= link_to I18n.t('spree.login'), spree.login_path, class: 'auth-link' %>
  <% end %>

  <%= render 'spree/shared/cart/cart_link' %>
</div>
