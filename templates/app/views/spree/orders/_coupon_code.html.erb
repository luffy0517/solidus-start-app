<%= form_tag order_coupon_codes_path(@order), method: :post, class: "coupon-code" do %>
  <div class="coupon-code__input">
    <div class="text-input text-input--small">
      <%= text_field_tag 'coupon_code',
        nil,
        id: 'order_coupon_code',
        placeholder: t("spree.coupon_code"),
        required: true
      %>
    </div>
  </div>

  <div class="coupon-code__action">
    <%= render(
      'spree/components/buttons/button_primary',
      content: t('spree.apply_code'),
      name: :commit,
      small: true,
      type: :submit
    ) %>
  </div>
<% end %>
